@page
@model Robot.ED.FacebookConnector.Dashboard.Pages.Robots.IndexModel
@{
    ViewData["Title"] = "Robots Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-page="./Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Robot
        </a>
    </div>

    @if (Model.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.ErrorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>URL</th>
                            <th>Available</th>
                            <th>Last Allocated</th>
                            <th>Token</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var robot in Model.Robots)
                        {
                            <tr>
                                <td>@robot.Name</td>
                                <td>@robot.Url</td>
                                <td>
                                    @if (robot.Available)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Busy</span>
                                    }
                                </td>
                                <td>
                                    @if (robot.LastAllocatedAt.HasValue)
                                    {
                                        @robot.LastAllocatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(robot.Token))
                                    {
                                        <code>@robot.Token.Substring(0, Math.Min(10, robot.Token.Length))...</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>@robot.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="./Edit" asp-route-id="@robot.Id" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-page="./Delete" asp-route-id="@robot.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                
                @if (!Model.Robots.Any())
                {
                    <div class="text-center text-muted py-4">
                        <p>No robots found.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
