@page
@model Robot.ED.FacebookConnector.Dashboard.Pages.Tokens.DeleteModel
@{
    ViewData["Title"] = "Delete Token";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="display-4 mb-4">@ViewData["Title"]</h1>
            
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this token?
            </div>
            
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Username</dt>
                        <dd class="col-sm-9">@Model.Token.UserName</dd>
                        
                        <dt class="col-sm-3">Token Value</dt>
                        <dd class="col-sm-9">
                            <code>••••••••</code>
                            <small class="text-muted">(masked for security)</small>
                        </dd>
                        
                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.Token.Created.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                    </dl>
                    
                    <form method="post">
                        <input type="hidden" asp-for="Token.Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Token
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
