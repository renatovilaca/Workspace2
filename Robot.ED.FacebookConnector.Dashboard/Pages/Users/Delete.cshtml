@page
@model Robot.ED.FacebookConnector.Dashboard.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="display-4 mb-4 text-danger">@ViewData["Title"]</h1>
            
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Warning!</strong> Are you sure you want to delete this user? This action cannot be undone.
            </div>

            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">User Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Username:</dt>
                        <dd class="col-sm-9">@Model.UserName</dd>
                        
                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>
                        
                        <dt class="col-sm-3">Roles:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Roles != null && Model.Roles.Any())
                            {
                                <span class="badge bg-info">@string.Join(", ", Model.Roles)</span>
                            }
                            else
                            {
                                <span class="text-muted">No roles</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-3">Email Confirmed:</dt>
                        <dd class="col-sm-9">
                            @if (Model.EmailConfirmed)
                            {
                                <span><i class="bi bi-check-circle text-success"></i> Yes</span>
                            }
                            else
                            {
                                <span><i class="bi bi-x-circle text-danger"></i> No</span>
                            }
                        </dd>
                    </dl>
                    
                    <form method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
