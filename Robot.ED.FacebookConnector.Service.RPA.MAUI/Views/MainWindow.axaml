<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:vm="using:Robot.ED.FacebookConnector.Service.RPA.MAUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="550"
        x:Class="Robot.ED.FacebookConnector.Service.RPA.MAUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Width="400" Height="550"
        Title="RPA Facebook Connector"
        CanResize="False"
        WindowStartupLocation="Manual"
        ExtendClientAreaToDecorationsHint="True"
        SystemDecorations="Full"
        Classes="dark-window">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" Background="#1e1e1e">
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#252526" 
                BorderBrush="#007acc" 
                BorderThickness="0,0,0,2"
                Padding="20">
            <StackPanel Spacing="10">
                <TextBlock Text="RPA Facebook Connector" 
                          FontSize="20" 
                          FontWeight="SemiBold"
                          Foreground="White"/>
                <Border x:Name="StatusBadge"
                       Classes="Stopped"
                       CornerRadius="12"
                       Padding="16,6">
                    <TextBlock Text="{Binding StatusText}" 
                              FontSize="12" 
                              FontWeight="Bold"
                              HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="20" Spacing="20">
                
                <!-- Status Section -->
                <Border Background="#252526" 
                       BorderBrush="#3f3f46" 
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="STATUS DA EXECUÇÃO" 
                                  FontSize="12" 
                                  Foreground="#858585"
                                  LetterSpacing="0.5"/>
                        <Border x:Name="ExecutionStatusBorder"
                               Background="#2d2d30"
                               BorderBrush="#3f3f46"
                               BorderThickness="1"
                               CornerRadius="6"
                               Padding="12">
                            <TextBlock Text="{Binding StatusMessage}" 
                                      FontSize="14"
                                      FontWeight="Medium"
                                      Foreground="White"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Timer Section -->
                <Border Background="#252526" 
                       BorderBrush="#3f3f46" 
                       BorderThickness="1"
                       CornerRadius="8"
                       Padding="16">
                    <StackPanel Spacing="8">
                        <TextBlock Text="TEMPO DE EXECUÇÃO DO CICLO" 
                                  FontSize="12" 
                                  Foreground="#858585"
                                  LetterSpacing="0.5"/>
                        <Border Background="#2d2d30"
                               BorderBrush="#3f3f46"
                               BorderThickness="1"
                               CornerRadius="6"
                               Padding="16">
                            <TextBlock Text="{Binding ElapsedTime}" 
                                      FontSize="32"
                                      FontWeight="Bold"
                                      FontFamily="Courier New"
                                      Foreground="#007acc"
                                      HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Control Buttons -->
                <Grid ColumnDefinitions="*,12,*,12,*">
                    <Button Grid.Column="0" 
                           Classes="btn-start"
                           Command="{Binding StartCommand}"
                           IsEnabled="{Binding CanStart}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="▶" FontSize="16"/>
                            <TextBlock Text="Iniciar" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="2" 
                           Classes="btn-pause"
                           Command="{Binding PauseCommand}"
                           IsEnabled="{Binding CanPause}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="⏸" FontSize="16"/>
                            <TextBlock Text="Pausar" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="4" 
                           Classes="btn-stop"
                           Command="{Binding StopCommand}"
                           IsEnabled="{Binding CanStop}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="⏹" FontSize="16"/>
                            <TextBlock Text="Parar" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Exit Button -->
                <Border BorderBrush="#3f3f46" 
                       BorderThickness="0,1,0,0"
                       Padding="0,20,0,0">
                    <Button Classes="btn-exit"
                           Command="{Binding ExitCommand}"
                           HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                            <TextBlock Text="✕" FontSize="16"/>
                            <TextBlock Text="Encerrar Aplicação" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>

</Window>
